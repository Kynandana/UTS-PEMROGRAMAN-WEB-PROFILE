    text-decoration: underline;
}


/* ----- 4G. Footer ----- */
.footer {
    text-align: center;
    padding: 40px 15px; 
    margin-top: 0; 
    background-color: #f9f9f9;
    color: #777777;
    font-size: 0.9rem;
    border-top: 1px solid #eeeeee;
}


/* ===== 5. ATURAN RESPONSIVE (MEDIA QUERY) ===== */
/* 'Sihir' ini jalan kalau lebar layar MINIMAL 600px */
@media (min-width: 600px) {

    /* 1. Sembunyikan tombol hamburger */
    .nav-toggle {
        display: none;
    }
    
    /* 2. Sembunyikan menu mobile */
    .mobile-menu {
        display: none !important; /* Paksa sembunyi */
    }

    /* 3. Tampilkan menu desktop */
    .nav-menu {
        display: flex; /* Bikin jadi barisan ke samping */
        align-items: center;
    }

    /* 4. UBAH GALLERY JADI 2 KOLOM */
    .gallery-list {
        grid-template-columns: 1fr 1fr; /* 2 kolom sama besar */
    }
}
